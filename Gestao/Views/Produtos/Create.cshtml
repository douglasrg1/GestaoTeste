                    @Html.EditorFor(model => model.desconto, new { htmlAttributes = new { @class = "form-control", @PlaceHolder = "Valor de desconto" } })
                    @Html.ValidationMessageFor(model => model.desconto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.condigoReferencia)
