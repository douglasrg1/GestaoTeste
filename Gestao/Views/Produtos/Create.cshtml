                </div>
            </div>

            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.valorFrete)
                <div>
                    @Html.EditorFor(model => model.valorFrete, new { htmlAttributes = new { @class = "form-control", @PlaceHolder = "Valor do frete" } })
                    @Html.ValidationMessageFor(model => model.valorFrete, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.despesasAdicionaisdeCompra)
