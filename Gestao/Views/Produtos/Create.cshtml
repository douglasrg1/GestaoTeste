        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.nome)
                <div>
                    @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control", @PlaceHolder = "Nome" } })
                    @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.valorCompra)
                <div>
                    @Html.EditorFor(model => model.valorCompra, new { htmlAttributes = new { @class = "form-control", @PlaceHolder = "Valor da compra" } })
