@model IEnumerable<Gestao.Models.Empresa>

@{
    ViewBag.Title = "Index";
}

<h2>Dados da empresa</h2>


<table class="table table-condensed table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.razaoSocial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nomeFantasia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cnpj)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.rua)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.numero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bairro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.complemento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefone1)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.razaoSocial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nomeFantasia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cnpj)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.rua)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.numero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bairro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.complemento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefone1)
        </td>
        <td>
            <a class="btn btn-warning" href="@Url.Action("Details","Empresas",new {id = item.id })"><span class='glyphicon glyphicon-list-alt'></span></a>
            <a class="btn btn-info" href="@Url.Action("Edit","Empresas",new {id = item.id })"><span class='glyphicon glyphicon-edit'></span></a>
            <a class="btn btn-danger" href="@Url.Action("Delete","Empresas",new {id = item.id })"><span class='glyphicon glyphicon-trash'></span></a>
        </td>
    </tr>
}

</table>

@section scripts{
    <script>
        var mensagem = "@TempData["mensagem"]";

        if (mensagem != null) {
            if (mensagem == "Empresa cadastrada com sucesso" || mensagem == "Cadastro editado com Sucesso" || mensagem == "Cadastro removido com Sucesso"){
                toastr.success(mensagem);
            }

            else if(mensagem == "Falha ao adicionar empresa" || mensagem == "Erro ao editar cadastro" || mensagem == "Erro ao remover cadastro") {
                toastr.error(mensagem);
            }
        }
    </script>
}
